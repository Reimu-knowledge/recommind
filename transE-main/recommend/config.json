{
  "system_config": {
    "name": "知识图谱推荐系统",
    "version": "1.1",
    "description": "基于TransE嵌入的教育推荐系统（优化版）"
  },
  "paths": {
    "embeddings_path": "embeddings.csv",
    "knowledge_graph_path": "knowledge_graph.csv",
    "question_bank_path": "question_bank.json"
  },
  "model_config": {
    "embedding_dimension": 50,
    "learning_rate_alpha": 0.7,
    "mastery_threshold": 0.5,
    "difficulty_target": 0.6
  },
  "recommendation_config": {
    "default_question_count": 3,
    "max_candidate_questions": 8,
    "scoring_weights": {
      "coverage": 0.4,
      "relevance": 0.3,
      "difficulty": 0.2,
      "diversity": 0.1
    }
  },
  "cold_start_config": {
    "basic_knowledge_points": ["K1", "K2", "K3"],
    "initial_mastery_scores": {
      "K1": 0.1,
      "K2": 0.1,
      "K3": 0.05
    }
  },
  "learning_config": {
    "correct_answer_strength": 1.0,
    "incorrect_answer_strength": 0.3,
    "mastery_update_correct": 0.3,
    "mastery_update_incorrect": 0.1
  },
  "forgetting_curve_config": {
    "enable_forgetting": true,
    "forgetting_start_days": 1,
    "base_memory_strength": 2.0,
    "practice_bonus": 0.5,
    "minimum_retention": 0.05
  },
  "error_review_config": {
    "enable_error_review": true,
    "review_intervals_days": [1, 3, 7, 15],
    "max_review_ratio": 0.33,
    "priority_boost_per_error": 0.3
  },
  "personalization_config": {
    "enable_adaptive_weights": true,
    "enable_difficulty_adaptation": true,
    "difficulty_offset_range": 0.2,
    "learning_history_window": 5
  }
}
